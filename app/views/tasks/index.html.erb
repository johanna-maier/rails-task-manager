<h1>My tasks</h1>
<ul style="list-style-type:none; padding: 0px;">
<% @tasks.each do |task| %>
  <li><input type="checkbox" <%= "checked" if task.completed == true %>>
   <%= link_to task.title, task_path(task) %> | <%= link_to "Delete task", task_path(task), method: :delete %>
  </li>
<% end %>
</ul>

<br><br>
<%= link_to "Add a new task", tasks_new_path %>
